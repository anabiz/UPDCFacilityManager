@using UPDCFacilityManager.Modules.Auth.Core.ViewModels
@model LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "User Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UPDCFacilityManager.Bootstrapper.styles.css" asp-append-version="true" />
</head>
<body>
  

<section class="vh-100" style="background-color: #343A40;">
    <div class="container py-5 h-90">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Login" asp-controller="Auth" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>

                                        <div class="brand-login-logo">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                         <img src="../../dist/img/custodian-logo.png" alt="Residence Logo" style="width:60px; height:40px; margin-bottom:4px">
                                    </div>

                                    <h5 class="fw-normal pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                    <div class="form-group form-outline mb-4">
                                        <label asp-for="Email" class="control-label">Email address</label>
                                        <input asp-for="Email" id="form2Example17" class="form-control form-control-lg" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-outline mb-4">
                                        <label asp-for="Password" class="control-label">Password</label>
                                        <input asp-for="Password" id="form2Example27" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-2">
                                        <div class="checkbox">
                                            <label asp-for="RememberMe">
                                                <input asp-for="RememberMe" />
                                                @Html.DisplayNameFor(m=> m.RememberMe)
                                            </label>
                                        </div>      
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <input type="submit" value="Login" class="btn btn-dark btn-lg btn-block" />
                                    </div>

                                    <a class="small text-muted" href="#!">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a asp-controller="Auth" asp-action="Register" style="color: #393f81;">Register here</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

