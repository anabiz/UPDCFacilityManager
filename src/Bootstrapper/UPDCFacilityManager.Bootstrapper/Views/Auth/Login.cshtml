@using UPDCFacilityManager.Modules.Auth.Core.ViewModels
@model LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "User Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UPDCFacilityManager.Bootstrapper.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="row d-flex  align-items-center" style="height:auto;">

        <div class="row g-0">
                    <div class="col-md-6  d-none d-md-block">
                       <img src="~/images/login-img.png"
                                alt="login form" class="img-fluid" style="height:100vh; width:100%" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center" style="background-color:#9381FF;height:auto;margin: 0 auto;">
                           <form asp-action="Login" asp-controller="Auth" method="post" style="background-color:#F8F7FF;border-radius:0.3rem;width:70%;margin:0 auto">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="" style="width:70%; margin:0 auto">
                                    <div class="text-center mt-2">
                                        <h5 class="pb-3" style="letter-spacing: 1px;color:#9381FF;font-weight:900;font-family:poppins">
                                            FACILITY MANAGEMENT
                                            PORTAL
                                        </h5>
                                    </div>
                                    <div class="form-group form-outline mb-4">
                                        <label asp-for="Email" class="control-label">Email address</label>
                                        <input asp-for="Email" id="form2Example17" class="form-control form-control-lg" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-outline mb-4">
                                        <label asp-for="Password" class="control-label">Password</label>
                                        <input asp-for="Password" id="form2Example27" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-2 d-flex">
                                        <div class="checkbox w-50">
                                            <label asp-for="RememberMe">
                                                <input asp-for="RememberMe" />
                                                @Html.DisplayNameFor(m=> m.RememberMe)
                                            </label>
                                        </div>
                                        <div class="w-50 text-right" style="text-align:right">
                                            <a class="small text-muted" href="#!">Forgot password?</a>
                                        </div>
                                    </div>

                                    <div class="pt-1 mb-4 text-center">
                                        <input type="submit" value="Login" class="btn btn-lg" style="background-color: #9381FF; color:#fff" />
                                    </div>
                                </div>
                               
                            </form>
                    </div>
            </div>
  
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

