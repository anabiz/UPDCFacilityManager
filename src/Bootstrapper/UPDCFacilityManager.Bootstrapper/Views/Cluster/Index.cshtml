@model List<ClusterViewModel>

@{
    ViewData["Title"] = "Cluster";
}

<div class="container">
    <div class="row pt-3">
        <div class="col-12">
            <span class="text-end" style="width:100%;display:inline-block;text-align:right">
                <a asp-action="Create" asp-controller="Cluster" class="btn" style="background-color:#9381FF; color:#F8F7FF">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add Cluster
                </a>
            </span>
        </div>
    </div>
</div>
<div class="px-5">
    <div class="row">
       
        @foreach (var cluster in Model)
        {
             <partial name="~/Views/Shared/Partials/_ActionCard.cshtml" , model="@(new CardActionViewModel{Label=cluster.Name,ControllerName="Cluster", ActionName="Details",
             image="~/images/cluster-icon.png", Route=cluster.Id})" />
        }

    </div>
</div>